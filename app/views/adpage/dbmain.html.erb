<script src="https://spi.maps.daum.net/imap/map_js_init/postcode.v2.js"></script>
<script src="//apis.daum.net/maps/maps3.js?apikey=23598cdf36f0c5f5bf1f1bfda70b8e80&libraries=services"></script>
<script>
    $( ".opener" ).click(function() {
      $( ".puter" ).slideToggle( "slow", function() {
      });
    });
    $( ".openert" ).click(function() {
      $( ".search" ).slideToggle( "slow", function() {
      });
    });
    $(".re").click(function(){
        var thisid=$(this).attr("id");
        $("#reform").attr("action","/adpage/rewritemenu/"+thisid+"/<%=@info%>");
        $("#reform").submit();
    });
    $(".del").click(function(){
        var thisid=$(this).attr("id");
        $("#delform").attr("action","/adpage/delmenu/"+thisid);
        
        if (confirm("정말 삭제하시겠습니까?")==true){
            $("#delform").submit();
        }
        else{
            return;
        }
        
    });
    

</script>