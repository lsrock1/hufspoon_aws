<div class="container puter">
    <h3>검색결과</h3>
    <a href="/adpage/dbmain/<%=@info%>"><button>돌아가기</button></a>
    <div class="table-responsive">
            <table class="table">
                <tr>
                    
                    <th>한국이름</th>
                    <th>영어</th>
                    <th>독음</th>
                    <th>일본</th>
                    <th>간체</th>
                    <th>번체</th>
                    <th>아랍어</th>
                    <th>es</th>
                    <th>ge</th>
                    <th>ita</th>
                    <th>po</th>
                    <th> </th>
                    <th> </th>
                </tr>
                
                <% @list.each do|l|%>
                <tr>
                    <td><%=l.kname%></td>
                    <td><%=l.ename%></td>
                    <td><%=l.ername%></td>
                    <td><%=l.jnamea%></td>
                    <td><%=l.cname%></td>
                    <td><%=l.cnameb%></td>
                    <td><%=l.aname%></td>
                    <td><%=l.spanish%></td>
                    <td><%=l.germany%></td>
                    <td><%=l.italia%></td>
                    <td><%=l.portugal%></td>
                    <td><button class="re" id="<%=l.id%>">수정</button></td>
                    <td><button class="del btn btn-warning" id="<%=l.id%>">삭제</button></td>
                </tr>
                <%end%>
            </table>
        </div>
</div>
<form id="reform" method="get">
            
        </form>
        <form id="delform" method="get">
            
        </form>
<script>
    $(".re").click(function(){
        var thisid=$(this).attr("id");
        $("#reform").attr("action","/adpage/rewritemenu/"+thisid+"/<%if @key!="/"%><%=URI.encode(@key)%><%else%>%2F<%end%>");
        $("#reform").submit();
    });
    $(".del").click(function(){
        var thisid=$(this).attr("id");
        $("#delform").attr("action","/adpage/delmenu/"+thisid);
        
        if (confirm("정말 삭제하시겠습니까?")==true){
            $("#delform").submit();
        }
        else{
            return;
        }
        
    });
</script>