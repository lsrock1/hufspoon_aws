                    <li><%=link_to "이문동식당관리",data_rests_path%></li>
                    <li><%=link_to "큐레이션 관리",data_curates_path%></li>
                    <li><%=link_to "일일메뉴",data_diets_path%></li>
                </ul>
              </div>
            </li>
          </ul>
        </li>
        <%=yield :menu%>
      </ul>
      
      <ul class="left hide-on-med-and-down">
        <li><%=link_to "로그아웃",out_path%></li>
        <li><a class="dropdown-button" href="#!" data-activates="dropdown1">페이지 이동<i class="material-icons right">arrow_drop_down</i></a></li>
        <%=yield :menu%>
      </ul>
      <%if @search%>
      <ul class="right">
        <li><a><i class="material-icons opener">search</i></a></li>
      </ul>
      <%end%>
       <a href="#" data-activates="slide-out" class="button-collapse grey-text"><i class="material-icons">menu</i></a>
    </div>
    <%=yield :search_form%>
  </nav>
  
  <%= yield %>



</body>
</html>