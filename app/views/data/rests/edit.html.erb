<%content_for :menu do%>
  <li><%=link_to "돌아가기",data_rests_path%></li>
<%end%>
<div class="container">
  <div class="row">
      <h3>식당수정</h3>
      <%=form_for @rest,:url => data_rest_path  do |f|%>
      
      <div class="input-field">
        <%=f.label :address%>
        <%=f.text_field :address%>
      </div>
      
      <div class="input-field">
        <%=f.label :phone%>
        <%=f.text_field :phone%>
      </div>
      
      <div class="input-field">
        <%=f.label :name%>
        <%=f.text_field :name%>
      </div>
      
      <div class="input-field">
        <%=f.select :food,options_for_select([["한식","한식"],["일식","일식"],["양식","양식"],["치킨","치킨"],["고기","고기"],["분식/면","분식/면"]])%>
        <%=f.label :식당종류%>
      </div>
      
      <div class="input-field">
        <%=f.label :오픈시간%>
        <%=f.text_field :open%>
      </div>
      
      <div class="input-field">
        <%=f.label :picture%>
        <%=f.text_field :picture%>
      </div>
      <%=f.submit "저장",class: :btn%>
    <%end%>
    
    <h4>사진추가</h4>
    <%=form_for @rest,:url => data_rest_path  do |f|%>
      <div class="input-field">
        <%=f.label :picture%>
        <%=f.text_field :picture,value: ""%>
      </div>
      <%=f.submit "저장",class: :btn%>
    <%end%>
    <%unless @rest.picture!=nil&&@rest.picture!=""%>
    <table>
      <tbody>
        <%@number=0%>
        <%@rest.picture.split('http')[1..-1].each do |picture|%>
        <tr>
          <td><img class="responsive-img" src="http<%=picture%>"></td>
          <td><%=link_to "삭제","/data/rests/"+@rest.id.to_s+"/picture/"+@number.to_s,{class: :btn, method: :delete, data: {confirm: '정말 삭제 하시겠습니까?'}}%></td>
        </tr>
        <%@number+=1%>
        <%end%>
      </tbody>
    </table>
    <%end%>
  </div>
</div>
<script>
  $(".button-collapse").sideNav();
  $('select').material_select();
</script>