<div class="row">
    <div class="col s12 m8 offset-m2 l8 offset-l2">
    <a href="/"><button class="btn btn-default">Home</button></a>
    <a href="/board/write" class="btn btn-default" role="button">Write</a>
    <div class="table-responsive" >
        <table class="table">
            <thead >
                <tr>
                    <th>Number</th>
                    <th>Title</th>
                    <th class="hide-on-small-only">Date</th>
                </tr>
            </thead>
            <%row=@allpost.length+20*(@id-1)%>
            <% @allpost.each do|d|%>
            <tr>
                <td><%=row%></td><%row=row-1%>
                <td><a href="/board/post/<%=d.id%>"><%=d.title%></a></td>
                <td class="hide-on-small-only"><%=d.created_at.in_time_zone("Asia/Seoul").strftime("%m/%d  %H:%M")%></td>
            </tr>
            <%end%>
        </table>
    </div>
  <ul class="pagination center-align">
    <%@num.times do|n|%>
        <%if @id==n+1%>
          <li class="active">
            <a href="/board/seepost/<%=n+1%>"><%=n+1%></a>
          </li>
        <%else%>
          <li class="waves-effect"><a href="/board/seepost/<%=n+1%>"><%=n+1%></a></li>
        <%end%>
    <%end%>
  </ul>
  <%if session[:level]==nil%><a class="right"href="/board/hufslogin">admin</a>
  <%else%><a class="right"href="/board/out">logout</a><%end%>
  </div>
</div>